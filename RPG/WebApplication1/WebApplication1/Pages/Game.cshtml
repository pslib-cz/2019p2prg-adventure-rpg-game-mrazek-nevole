@page
@model WebApplication1.Pages.GameModel
@{
    ViewData["Title"] = "Game";
}

<h1>@Model.Location.Title</h1>
<div>@Model.Location.Description</div>
<div class="m-1">
    @foreach (var target in Model.Targets)
    {
        <a class="btn btn-outline-primary" asp-page="Game" asp-route-id="@target.To">@target.Description</a>
        }
</div>
